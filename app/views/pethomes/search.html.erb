<br>
<div class="text-center">
  <%= render 'search_form' %>
</div>


<div class="row">
  <% @pethomes.each do |pethome| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(250,250,250,0.3),rgba(250,250,250,0.2)), url('<%= pethome.pets.any? ? pethome.pets.first.photo_url : Pet.default_url  %>')">
        <div class="card-description">
          <h2><%= pethome.address %></h2>
        </div>
        <img class="card-user" src="<%= pethome.user.photo_url %>">
        <%= link_to "", pethome, class: "card-link" %>
      </div>

    </div>
  <% end %>
</div>
