<br>
<div class="row text-center">

  <div class="col-xs-12 col-md-4 text-left">
    <p><b>Address:</b> <%= @pethome.address %></p>
    <p><b>Number of Bedrooms:</b> <%= @pethome.bedrooms %>
    </p>
    <p><b>Maximum Guests:</b> <%= @pethome.guests %>
    </p>

    <p><%= @pethome.observations %>
    </p>
  </div>
  <div class="col-xs-12 col-md-4">
    <p><%= cl_image_tag @pethome.photo, width: 300 %></p>
  </div>
  <div class="col-xs-12 col-md-4">
    <p><%= cl_image_tag @pethome.user.photo, width: 100 %></p>
    <p><%= @pethome.user.first_name %> <%= @pethome.user.last_name %>
    </p>
  </div>
</div>

<h3>Pets</h3>

<% if @pethome.user == current_user %>
  <%= render "pets/form" %>
<% end %>

<% @pethome.pets.each do |pet| %>

  <p><%= cl_image_tag pet.photo, width: 50 %></p>

  <p><%= pet.name %></p>
<% end %>

<%= render "bookings/form" %>
